{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "incremental": true,
    "paths": {
      "@/common/*": ["../common/*"]
    }
  },
  "include": ["src/**/*.ts", "src/knexfile.ts", "../common/types/page-stat.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../common" }]
}
