{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node", "vitest/globals"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "incremental": false,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules"],
}
