{
  "name": "server",
  "version": "v0.2.1",
  "description": "KoInsight back-end server",
  "license": "MIT",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc -b",
    "build:migrations": "tsc -p tsconfig.migrations.json",
    "dev": "NODE_ENV=development nodemon src/app.ts",
    "knex": "DATA_PATH=../../../data knex --knexfile ./src/knexfile.ts",
    "seed": "npm run knex seed:run --env=development",
    "test": "npm run build:migrations && vitest run",
    "test:watch": "npm run build:migrations && vitest",
    "test:coverage": "npm run build:migrations && vitest run --coverage"
  },
  "dependencies": {
    "@koinsight/common": "*",
    "archiver": "7.0.1",
    "bcryptjs": "3.0.3",
    "better-sqlite3": "12.6.0",
    "cors": "2.8.5",
    "date-fns": "4.1.0",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "knex": "3.1.0",
    "morgan": "1.10.1",
    "multer": "2.0.2",
    "openai": "6.16.0",
    "ramda": "0.31.1",
    "sqlite3": "5.1.7",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@faker-js/faker": "10.2.0",
    "@types/archiver": "7.0.0",
    "@types/bcrypt": "6.0.0",
    "@types/better-sqlite3": "7.6.13",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/morgan": "1.9.10",
    "@types/multer": "2.0.0",
    "@types/node": "22.12.0",
    "@types/ramda": "0.31.1",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "nodemon": "3.1.11",
    "supertest": "7.1.4",
    "ts-node": "10.9.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
